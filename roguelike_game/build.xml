<project>
	<target name="clean">
		<delete dir="build"/>
	</target>

	<target name="compile">
		<mkdir dir="build/classes"/>
		<javac srcdir="src/roguelike_game/" destdir="build/classes"/>
	</target>

	<target name="jar">
		<jar destfile="build/jar/rogueLikeGame.jar" basedir="build/classes">
			<manifest>
				<attribute name="Main-Class" value="roguelike_game.Roguelike_game"/>
			</manifest>
		</jar>
	</target>

	<target name="run">
		<java jar="build/jar/rogueLikeGame.jar" fork="true"/>
	</target>
</project>
